---
import BackBusinessCard from "../components/index/BackBusinessCard.astro";
import FrontBusinessCard from "../components/index/FrontBusinessCard.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="container">
    <div class="card-container">
      <input
        type="checkbox"
        id="input-checkbox-card"
        class="input-checkbox-card"
        aria-label="Toggle card flip"
      />

      <label for="input-checkbox-card" class="label-card">
        <div class="card">
          <div class="card-empty card-front">
            <FrontBusinessCard />
          </div>

          <div class="card-empty card-back">
            <BackBusinessCard />
          </div>
        </div>
      </label>
    </div>
  </div>
</Layout>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const card = document.querySelector<HTMLElement>(".card");
    if (card) {
      card.style.animation = "spin 3s ease-in-out forwards";

      setTimeout(() => {
        card.style.animation = "";
      }, 3000);
    }
  });
</script>

<style>
  .container {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    z-index: 10;
  }

  .card-container {
    width: 600px;
    height: 350px;
    perspective: 1000px;
    position: relative;
  }

  .input-checkbox-card {
    position: absolute;
    opacity: 0;
    pointer-events: none;
    width: 0;
    height: 0;
  }

  .label-card {
    display: block;
    width: 100%;
    height: 100%;
    cursor: pointer;
    position: relative;
  }

  .card {
    width: 100%;
    height: 100%;
    position: relative;
    transition: transform 1s ease-in-out;
    transform-style: preserve-3d;
    border-radius: 5px;
    box-shadow:
      0 15px 25px rgba(0, 0, 0, 0.7),
      0 5px 5px rgba(255, 255, 255, 0.1) inset;
    border: 2px solid #222;
    background: linear-gradient(145deg, #3a3a3a, #606060);
    position: relative;
  }

  .card::before {
    content: "";
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    background: linear-gradient(45deg, #888, #444, #888);
    z-index: -1;
    border-radius: 5px;
  }

  .input-checkbox-card:checked + .label-card .card {
    transform: rotateY(180deg) scale(1.02);
  }

  .card-empty {
    position: absolute;
    width: 100%;
    height: 100%;
    backface-visibility: hidden;
    display: flex;
    flex: 1;
    border-radius: 5px;
    color: #f0f0f0;
    text-shadow:
      0 1px 2px rgba(0, 0, 0, 0.8),
      0 0 10px rgba(255, 255, 255, 0.2);
    background: linear-gradient(145deg, #3a3a3a, #606060);
    overflow: hidden;
  }

  .card-empty::before {
    content: "";
    position: absolute;
    top: 0;
    left: -150%;
    width: 80%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.35),
      transparent
    );
    transform: skewX(-30deg);
    transition: left 0.8s cubic-bezier(0.23, 1, 0.32, 1);
    z-index: 1;
  }

  .card-container:hover .card-empty::before {
    left: 150%;
  }

  .card-back {
    transform: rotateY(180deg);
  }

  .card-empty::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: repeating-linear-gradient(
      45deg,
      transparent,
      transparent 2px,
      rgba(255, 255, 255, 0.05) 2px,
      rgba(255, 255, 255, 0.05) 4px
    );
    z-index: 2;
    pointer-events: none;
  }

  @keyframes spin {
    0% {
      transform: rotateY(0deg);
    }
    100% {
      transform: rotateY(360deg);
    }
  }
</style>
