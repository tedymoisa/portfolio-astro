---
import BackBusinessCard from "../components/index/BackBusinessCard.astro";
import FrontBusinessCard from "../components/index/FrontBusinessCard.astro";
import Layout from "../layouts/Layout.astro";
import { db } from "../lib/database";

const title = `${db.name} ${db.surname} | ${db.profession}`;
const description = `A professional portfolio showcasing the work of ${db.name} ${db.surname}, ${db.profession}. Explore modern, scalable web applications built with cutting-edge technologies including Next.js, React, TypeScript, and Spring Boot. Featured projects highlight expertise in full-stack development, secure authentication, SEO-optimized architectures, and high-performance UIs.`;
const ogTitle = `${db.name} ${db.surname} | ${db.profession}`;
---

<Layout pageTitle={title} pageDescription={description} ogTitle={ogTitle}>
  <div class="container">
    <div class="card-container">
      <input
        type="checkbox"
        id="input-checkbox-card"
        class="input-checkbox-card"
        aria-label="Toggle card flip"
      />

      <label for="input-checkbox-card" class="label-card">
        <div class="card">
          <div class="card-empty card-front">
            <FrontBusinessCard />
          </div>

          <div class="card-empty card-back">
            <BackBusinessCard />
          </div>
        </div>
      </label>
    </div>
  </div>
</Layout>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const card = document.querySelector<HTMLElement>(".card");
    if (card) {
      card.style.animation = "spin 3s ease-in-out forwards";

      setTimeout(() => {
        card.style.animation = "";
      }, 3000);
    }
  });
</script>

<style>
  .container {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    z-index: 10;
  }

  .card-container {
    width: 600px;
    height: 350px;
    perspective: 1000px;
    position: relative;
  }

  .input-checkbox-card {
    position: absolute;
    opacity: 0;
    pointer-events: none;
    width: 0;
    height: 0;
  }

  .label-card {
    display: block;
    width: 100%;
    height: 100%;
    cursor: pointer;
    position: relative;
  }

  .card {
    width: 100%;
    height: 100%;
    position: relative;
    transition: transform 1s ease-in-out;
    transform-style: preserve-3d;
    border-radius: 5px;
    box-shadow:
      0 15px 25px rgba(0, 0, 0, 0.7),
      0 5px 5px rgba(255, 255, 255, 0.1) inset;
    border: 2px solid #222;
    background: var(--primary);
    position: relative;
    transform: translateZ(0.1px);
  }

  .card::before {
    content: "";
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    background: var(--primary);
    z-index: -1;
    border-radius: 5px;
  }

  .input-checkbox-card:checked + .label-card .card {
    transform: rotateY(180deg) scale(1.02);
    transform: rotateY(180deg) scale(1.02) translateZ(0.1px);
  }

  .card-empty {
    position: absolute;
    width: 100%;
    height: 100%;
    backface-visibility: hidden;
    display: flex;
    flex: 1;
    border-radius: 5px;
    color: var(--text-primary);
    text-shadow:
      0 1px 2px rgba(0, 0, 0, 0.8),
      0 0 10px rgba(255, 255, 255, 0.2);
    background: var(--primary);
    overflow: hidden;
    transform: translateZ(0.1px);
  }

  .card-empty::before {
    content: "";
    position: absolute;
    top: 0;
    left: -150%;
    width: 80%;
    height: 100%;
    background: var(--front-gloss);
    transform: skewX(-30deg);
    transition: left 0.8s cubic-bezier(0.23, 1, 0.32, 1);
    z-index: 1;
  }

  .card-container:hover .card-empty::before {
    left: 150%;
  }

  .card-back {
    transform: rotateY(180deg);
  }

  .card-empty::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: var(--back-gloss);
    z-index: 2;
    pointer-events: none;
    transition: opacity 0.3s ease;
    opacity: 1;
  }

  .card-container:hover .card-empty::after {
    opacity: 0.9;
  }

  @keyframes spin {
    0% {
      transform: rotateY(0deg);
    }
    100% {
      transform: rotateY(360deg);
    }
  }

  @media (max-width: 640px) {
    .card-container {
      width: 90vw;
      height: calc(90vw * 0.5833);
    }
  }
</style>
